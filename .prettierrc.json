{
  "$schema": "https://www.schemastore.org/prettierrc.json",
  "semi": true,
  "useTabs": false,
  "singleQuote": true,
  "bracketSpacing": true,
  "jsxSingleQuote": false,
  "bracketSameLine": false,
  "quoteProps": "consistent",
  "proseWrap": "always",
  "endOfLine": "lf",
  "arrowParens": "avoid",
  "trailingComma": "none",
  "htmlWhitespaceSensitivity": "css",
  "overrides": [
    {
      "files": ["*.sass", "*.scss", "*.css", "*.less", "*.html"],
      "options": {
        "singleQuote": false
      }
    }
  ]
}
